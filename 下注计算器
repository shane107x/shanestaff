<body>

  <h1>⚽ 动态赔率系统</h1>

  <div class="input-group">
    <label>主胜下注总额（元）</label>
    <input type="number" id="back1" value="50000" onchange="updateOdds()">
  </div>

  <div class="input-group">
    <label>平局下注总额（元）</label>
    <input type="number" id="backX" value="20000" onchange="updateOdds()">
  </div>

  <div class="input-group">
    <label>客胜下注总额（元）</label>
    <input type="number" id="back2" value="10000" onchange="updateOdds()">
  </div>

  <div class="odds-display" id="odds">
    <div class="odd-box">
      <h3>主胜</h3>
      <div class="odd-value" id="odd1">2.25</div>
    </div>
    <div class="odd-box">
      <h3>平局</h3>
      <div class="odd-value" id="oddX">3.00</div>
    </div>
    <div class="odd-box">
      <h3>客胜</h3>
      <div class="odd-value" id="odd2">3.00</div>
    </div>
  </div>

  <script>
    // 初始参数
    const winProb = 0.4;   // 主胜概率
    const drawProb = 0.3;  // 平局概率
    const loseProb = 0.3;  // 客胜概率
    const refundRate = 0.92; // 返奖率（抽水后）
    const k = 0.0001;      // 调整灵敏度

    function updateOdds() {
      // 获取当前下注金额
      const b1 = parseFloat(document.getElementById("back1").value) || 0;
      const bx = parseFloat(document.getElementById("backX").value) || 0;
      const b2 = parseFloat(document.getElementById("back2").value) || 0;

      // 计算公平赔率（带抽水）
      const fair1 = (1 / winProb) * refundRate;
      const fairX = (1 / drawProb) * refundRate;
      const fair2 = (1 / loseProb) * refundRate;

      // 风险调节因子（指数衰减）
      const factor1 = Math.exp(-k * b1);
      const factorX = Math.exp(-k * bx);
      const factor2 = Math.exp(-k * b2);

      // 最终动态赔率
      const odd1 = (fair1 * factor1).toFixed(2);
      const oddX = (fairX * factorX).toFixed(2);
      const odd2 = (fair2 * factor2).toFixed(2);

      // 更新显示
      document.getElementById("odd1").textContent = odd1;
      document.getElementById("oddX").textContent = oddX;
      document.getElementById("odd2").textContent = odd2;
    }

    // 页面加载时初始化一次
    window.onload = updateOdds;
  </script>

</body>
</html>
